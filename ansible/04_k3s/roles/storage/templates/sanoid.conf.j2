#######################
# K8S App Data Backup #
#######################

[rpool/{{ datasets[0].name }}]
  use_template = daily
  recursive = yes
  autosnap = yes
  autoprune = yes

[{{ backup_dataset }}]
  use_template = daily
  recursive = yes
  autosnap = no
  autoprune = yes

#############
# Templates #
#############

[template_daily]
  hourly = 0
  daily = 30
  monthly = 6
  yearly = 0
